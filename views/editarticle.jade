extends authlayout

block content
  #section-content
    if success
      p Your article has been updated!
    form#articleform(method='post', action='#')
      br
      div
        | Title:
        br
        input#title(type='text', value=article[0].title, name='title')
      br
      div
        | Category:
        br
        input#category(type='text', value=article[0].category, name='category')
      br
      div
        | Text:
        textarea(rows='4', cols='50', name='text', form='articleform')= article['0'].content
      br
      div
        input(type='submit', value='Publish')
        
