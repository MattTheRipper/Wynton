extends unauthlayout

block content

      if error
        h2 Error:
        p= error
      if reason
        p= reason
      if sqli
        img(src='https://cdn.meme.am/instances/500x/69423705.jpg', height=200, width=200)
      if success
        h3 Registration successful
      //admins will now login here, rather than the admin login
      #homecontent-bottom
        form#loginform(method='post', action='#')
          div
            | Username:
            br
            input#username(type='text', value='', name='username')
          br
          div
            | Password:
            br
            input#password(type='password', value='', name='password')
          br
          div
            input(type='submit', value='Login')
        div
          br
          br
          a(href='./forgotpassword') Forgot Password
          br
          a(href='./forgotusername') Forgot Username
      #footer
        div
          div
